<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMapConfig PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"
"http://ibatis.apache.org/dtd/sql-map-config-2.dtd">
<sqlMapConfig>

<settings cacheModelsEnabled="true" enhancementEnabled="true"
			lazyLoadingEnabled="true" errorTracingEnabled="true"
			maxRequests="32" maxSessions="100" maxTransactions="5"
			useStatementNamespaces="true"/>

    <sqlMap resource="ibatis-User.xml" />
    <sqlMap resource="ibatis-Comment.xml" />
    <sqlMap resource="ibatis-Article.xml" />
    <sqlMap resource="ibatis-Vote.xml" />
    <sqlMap resource="ibatis-Favorite.xml" />
</sqlMapConfig> 
